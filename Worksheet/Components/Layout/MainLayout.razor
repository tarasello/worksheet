@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="0" Variant="@DrawerVariant.Mini" Color="Color.Default">
        <MudNavLink Icon="@Icons.Material.Filled.Menu" OnClick="DrawerToggle" IconColor="Color.Inherit"></MudNavLink>
        <NavMenu></NavMenu>
    </MudDrawer>
    <div class="content-container">
        @Body
    </div>

</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
